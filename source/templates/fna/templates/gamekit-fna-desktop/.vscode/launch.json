{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Desktop (Debug, SDL2)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "cwd": "${workspaceRoot}/source/",
      "args": [
        "${workspaceRoot}/source/platforms/desktop/bin/Debug/net8.0/SampleGame.Desktop.dll"
      ],
      "preLaunchTask": "Build (Desktop, Debug)",
      "env": {
        "OSU_SDL3": "0"
      }
    },
    {
      "name": "Desktop (Debug, SDL3)",
